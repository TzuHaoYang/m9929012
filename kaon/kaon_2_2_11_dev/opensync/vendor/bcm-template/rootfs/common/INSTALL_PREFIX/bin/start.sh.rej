--- opensync/vendor/bcm-template/rootfs/common/INSTALL_PREFIX/bin/start.sh	2020-08-13 14:13:36.817898138 +0800
+++ opensync/vendor/bcm-template/rootfs/common/INSTALL_PREFIX/bin/start.sh	2020-11-05 11:44:18.551206448 +0800
@@ -35,22 +35,23 @@
 # Configure bridges
 #
 MAC_ETH0=$(mac_get eth0)
+MAC_ETH1=$(mac_get eth1)
 MAC_BRHOME=$(mac_set_local_bit ${MAC_ETH0})
 
-echo "Adding br-wan with MAC address $MAC_ETH0"
-ovs-vsctl add-br br-wan
-ovs-vsctl set bridge br-wan other-config:hwaddr="$MAC_ETH0"
-ovs-vsctl set int br-wan mtu_request=1500
+echo "Adding br1 with MAC address $MAC_ETH1"
+ovs-vsctl add-br br1
+ovs-vsctl set bridge br1 other-config:hwaddr="$MAC_ETH1"
+ovs-vsctl set int br1 mtu_request=1500
 
-echo "Adding br-home with MAC address $MAC_BRHOME"
-ovs-vsctl add-br br-home
-ovs-vsctl set bridge br-home other-config:hwaddr="$MAC_BRHOME"
-ovs-ofctl add-flow br-home table=0,priority=50,dl_type=0x886c,actions=local
+echo "Adding br0 with MAC address $MAC_BRHOME"
+ovs-vsctl add-br br0
+ovs-vsctl set bridge br0 other-config:hwaddr="$MAC_BRHOME"
+ovs-ofctl add-flow br0 table=0,priority=50,dl_type=0x886c,actions=local
 
-echo "Adding br-home.l2uf1"
-ovs-vsctl add-port br-home br-home.l2uf1 -- set interface br-home.l2uf1 type=internal ofport_request=500
-ovs-ofctl add-flow br-home "table=0,priority=250,dl_dst=01:00:00:00:00:00/01:00:00:00:00:00,dl_type=0x05ff,actions=NORMAL,output:500"
-ifconfig br-home.l2uf1 up
+echo "Adding br0.l2uf1"
+ovs-vsctl add-port br0 br0.l2uf1 -- set interface br0.l2uf1 type=internal ofport_request=500
+ovs-ofctl add-flow br0 "table=0,priority=250,dl_dst=01:00:00:00:00:00/01:00:00:00:00:00,dl_type=0x05ff,actions=NORMAL,output:500"
+ifconfig br0.l2uf1 up
 
 # Configure ARPs
 echo 1 | tee /proc/sys/net/ipv4/conf/*/arp_ignore
