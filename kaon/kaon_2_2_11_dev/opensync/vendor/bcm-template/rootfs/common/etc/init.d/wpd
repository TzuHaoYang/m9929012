#!/bin/sh
# {# jinja-parse #}
INSTALL_PREFIX={{INSTALL_PREFIX}}

WPD=${INSTALL_PREFIX}/bin/wpd

. /lib/plume_functions.sh

start()
{
    if plume_factory_mode ; then
        ${WPD} --daemon --set-auto
    else
        ${WPD} --daemon -x cm
    fi
}

stop()
{
    ${WPD} --kill
}

case "$1" in
    start)
        start
        ;;

    stop)
        stop
        ;;

    *)
        echo "$0: unrecognized option $1"
        exit 1
        ;;
esac
