#!/bin/sh

#START=98

SCRIPT=/csc/bin/mosquitto.service
BINARY=mosquitto
NAME=mosquitto

test -f $SCRIPT || exit 0

case "$1" in
    start)
        start-stop-daemon -S -q -b -m -p /var/run/$NAME.pid -x /bin/sh $SCRIPT
        ;;

    stop)
        start-stop-daemon -K -q -p /var/run/$NAME.pid
        killall $BINARY
        ;;

    restart)
        $0 stop
        sleep 1
        $0 start
        ;;

    *)
        N=/etc/init.d/$NAME
        echo "Usage: $N {start|stop|restart}" >&2
        exit 1
        ;;
esac

exit 0
