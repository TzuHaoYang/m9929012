include $(WLCFGDIR)/wlconfig_lx_router_apsta
include $(WLCFGDIR)/wlconfig_lx_wl_dslcpepcisdcfg
include $(WLCFGDIR)/wlconfig_lx_wl_dslcpe

# features

ifeq ($(strip $(BRCM_CHIP)),$(filter $(strip $(BRCM_CHIP)),47189))

#supported chips default as-is by the driver
# SUPPORTED_CHIPS := 47189 47189_947189acnrm 47189_947189acnrh 47189_947189acdbmr 47189_47452eapl 47189_947189acr 47189_empty
# SUPPORTED_CHIPS += 43217 43217_947189acnrm
# SUPPORTED_CHIPS += 4360 4360_wl1 4352 43522 43602 43602_wl1
# SUPPORTED_CHIPS += 4365 4366

# SUPPORTED_NVRAMVARS_ADDITIONAL := bcm47189_947189acnrm bcm47189_947189acnrh bcm47189_947189acdbmr bcm47189_47452eapl bcm47189_947189acr
# SUPPORTED_NVRAMVARS_ADDITIONAL += bcm43217_947189acnrm

WLAPSDSTD=1

WLFLAGS += -DBCM47XX
WLFLAGS += -D__ARM_ARCH_7A__
WLFLAGS += -DCONFIG_BCM47XX
# WLFLAGS += -DDSLCPE_WOMBO
WLFLAGS += -DBCA_HNDROUTER -Wno-error=date-time

WLFLAGS += -DACONF=0
WLFLAGS += -DGCONF=0
WLFLAGS += -DNCONF=0x0000301ff
WLFLAGS += -DLPCONF=0x2
WLFLAGS += -DSSLPNCONF=0
WLFLAGS += -DLCNCONF=0x00000001

else

#supported chips default as-is by the driver
SUPPORTED_CHIPS := 4321 4322 43222 43112 6362 4313 43224 43225 43226 43227 43228 43428 4331 43217 43131 4360 4352

# 
# D11 Core Revs
# 11 (4321a1), 
# 12 (4321b/c),
# 16 (4322/43222/43112),  18 (43224a0), 
# 22 (6362/43226) 23 (43224b0),
# 24 (4313),  26 (4331a0),      
# 29 (4331b0), 30(43228/43217/43131).                                   

# D11CONF2 D11 Core Rev > 31, Rev 40(4360a0) 42(4360B0)

# ACCONF 0 (4360a0), 0 (4360a2), 1 (4360b0)

WLFLAGS += -DD11CONF=0x65c51800  
WLFLAGS += -DACONF=0
WLFLAGS += -DGCONF=0
WLFLAGS += -DNCONF=0x0000301ff
WLFLAGS += -DLPCONF=0x2
WLFLAGS += -DD11CONF2=0x500
WLFLAGS += -DACCONF=0x3
endif 
