+#!/bin/sh
+do_mount_flash() {
+    ubiattach -m 0
+    if [ ! -d "/FLASH" ]; then
+        mkdir -p /FLASH
+        mkdir -p /FLASH/persist
+    fi
+    mount -o sync -t ubifs ubi0:data_vol /FLASH
+    if [ $? -eq 0 ]; then
+       echo "Mount success!"
+    else
+       echo "Something went wrong with the mount..."
+    fi
+}
+boot_hook_add preinit_main do_mount_flash
